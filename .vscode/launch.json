  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=lsdj"],
        "filter": {
          "name": "lsdj",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug LSDJ Tools – Inspect",
      "cargo": {
        "args": ["build", "--bin=lsdj-tools", "--package=lsdj-tools"],
        "filter": {
          "name": "lsdj-tools",
          "kind": "bin"
        }
      },
      "args": [
        "inspect",
        "-r",
        // "/Users/stijn/Development/lsdj-rs/test"
        "/Users/stijn/Google Drive/lsdj/4ntler"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug LSDJ Tools – Export",
      "cargo": {
        "args": ["build", "--bin=lsdj-tools", "--package=lsdj-tools"],
        "filter": {
          "name": "lsdj-tools",
          "kind": "bin"
        }
      },
      "args": [
        "export",
        "-p",
        "-v",
        "/Users/stijn/Development/lsdj-rs/test/92L_empty.sav"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug LSDJ Tools – Import",
      "cargo": {
        "args": ["build", "--bin=lsdj-tools", "--package=lsdj-tools"],
        "filter": {
          "name": "lsdj-tools",
          "kind": "bin"
        }
      },
      "args": [
        "import",
        "-o",
        "/Users/stijn/Desktop/test.sav",
        "/Users/stijn/Google Drive/lsdj/Tobokegao",
        "/Users/stijn/Google Drive/lsdj/4ntler"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug LSDJ Tools – Render",
      "cargo": {
        "args": ["build", "--bin=lsdj-tools", "--package=lsdj-tools"],
        "filter": {
          "name": "lsdj-tools",
          "kind": "bin"
        }
      },
      "args": [
        "render",
        "-r",
        "/Users/stijn/Google Drive/lsdj/4ntler/releases/Cover/Void Dissolution/lsdj_840.gb",
        "/Users/stijn/Google Drive/lsdj/4ntler/releases/Cover/Void Dissolution/lsdj_840.sav",
        "-d",
        "5m"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}
